<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/myrootlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/addhallbg"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/static_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:text="الرجاء التأكد من تواجدك بالقاعة عند تسجيل قاعة جديدة. 
وذلك بهدف تحديد موقع GPS للقاعه للاستفاده منه للوصول للقاعة من قبل المستخدمين."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff"
                android:textSize="17dp" />

            <LinearLayout
                android:id="@+id/lll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/vl"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/hall_state_name"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/addhall_edittext_bg"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:paddingLeft="10dp"
                        android:paddingRight="3dp"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        android:textCursorDrawable="@null">


                    </Spinner>

                    <Spinner
                        android:id="@+id/hall_city_name"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/addhall_edittext_bg"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:paddingLeft="10dp"
                        android:paddingRight="3dp"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        android:textCursorDrawable="@null">


                    </Spinner>

                    <EditText
                        android:id="@+id/hall_newname"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/addhall_edittext_bg"
                        android:ems="10"
                        android:hint="اكتب اسم القاعة"
                        android:inputType="textPersonName"
                        android:paddingLeft="10dp"
                        android:paddingRight="3dp"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        android:textCursorDrawable="@null">

                        <requestFocus />
                    </EditText>

                    <EditText
                        android:id="@+id/hall_desc"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="3"
                        android:background="@drawable/addhall_edittext_bg"
                        android:ems="10"
                        android:hint="أكتب نبذة عن القاعة وخدماتها بما لا يتجاوز 100 كلمة"
                        android:inputType="textMultiLine"
                        android:paddingLeft="10dp"
                        android:paddingRight="3dp"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        android:textCursorDrawable="@null">

                        <requestFocus />
                    </EditText>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight=".8">

                <EditText
                    android:id="@+id/hall_bookingamt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1.3"
                    android:background="@drawable/addhall_edittext_bg"
                    android:ems="10"
                    android:hint="قيمة حجز القاعة بالريال"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:paddingRight="3dp"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff" />

                <EditText
                    android:id="@+id/hall_capacity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/addhall_edittext_bg"
                    android:ems="10"
                    android:hint="سعة القاعة"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:paddingRight="3dp"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff" />
            </LinearLayout>

            <EditText
                android:id="@+id/hall_add"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_weight=".7"
                android:background="@drawable/addhall_edittext_bg"
                android:ems="10"
                android:hint="عنوان موقع القاعة"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:paddingRight="3dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textCursorDrawable="@null">
                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/hall_phone_no"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_weight=".7"
                android:background="@drawable/addhall_edittext_bg"
                android:ems="10"
                android:hint="ادخل رقم الهاتف"
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:paddingRight="3dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textCursorDrawable="@null" />

            <EditText
                android:id="@+id/hall_email"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_weight=".7"
                android:background="@drawable/addhall_edittext_bg"
                android:ems="10"
                android:hint="البريد الالكتروني"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:paddingRight="3dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textCursorDrawable="@null" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight=".8">

                <TextView
                    android:id="@+id/geotext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="2dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="3dp"
                    android:text="موقع القاعة في"
                    android:textColor="#ffffff"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/hall_geoloc"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/addhall_edittext_bg"
                    android:ems="10"
                    android:hint="عنوان القاعة"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:paddingRight="3dp"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff" />
            </LinearLayout>

            <Button
                android:id="@+id/addhall_img"
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_selector"
                android:gravity="center"
                android:text="قم بإضافة صور القاعة"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight=".4"></LinearLayout>

                <Button
                    android:id="@+id/hall_btn_save"
                    android:layout_width="15dp"
                    android:layout_height="43dp"
                    android:layout_gravity="center"
                    android:layout_weight=".6"
                    android:background="@drawable/button_selector"
                    android:gravity="center"
                    android:text="حجز"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight=".4"></LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>